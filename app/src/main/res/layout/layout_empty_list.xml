<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emptyImageCl"
    android:visibility="gone"
    android:layout_marginStart="@dimen/margin32"
    android:layout_marginEnd="@dimen/margin32"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/emptyImage"
        android:src="@drawable/ic_mood_bad"
        app:layout_constraintDimensionRatio="8:4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:textSize="@dimen/font18"
        app:layout_constraintTop_toBottomOf="@+id/emptyImage"
        android:textAlignment="center"
        android:text="@string/no_match_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>